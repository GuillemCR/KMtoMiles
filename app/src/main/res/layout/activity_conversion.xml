<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.upc.eseiaat.pma.guillemcomas.Sessio1.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/text_KM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text= "@string/text_KM"
        android:textSize="18sp"
        tools:layout_editor_absoluteY="36dp"
        tools:layout_editor_absoluteX="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginStart="14dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/edit_KM"
        android:layout_width="207dp"
        android:layout_height="42dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textSize="18sp"
        tools:layout_editor_absoluteY="16dp"
        tools:layout_editor_absoluteX="150dp"
        android:layout_alignBaseline="@+id/text_KM"
        android:layout_alignBottom="@+id/text_KM"
        android:layout_alignEnd="@+id/edit_Miles"
        android:layout_alignStart="@+id/edit_Miles" />

    <TextView
        android:id="@+id/text_Miles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_Miles"
        android:textSize="18sp"
        tools:layout_editor_absoluteY="187dp"
        tools:layout_editor_absoluteX="16dp"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/edit_KM"
        android:layout_alignStart="@+id/text_KM" />

    <EditText
        android:id="@+id/edit_Miles"
        android:layout_width="218dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textSize="18sp"
        tools:layout_editor_absoluteY="169dp"
        tools:layout_editor_absoluteX="139dp"
        android:layout_marginEnd="24dp"
        android:layout_alignBaseline="@+id/text_Miles"
        android:layout_alignBottom="@+id/text_Miles"
        android:layout_alignParentEnd="true" />


</RelativeLayout>